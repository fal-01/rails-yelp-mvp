<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category.capitalize %></p>
<h3>Reviews;</h3>
<ul>
<% @restaurant.reviews.each do |review| %>
<% stars = '' %>
<% review.rating.times do |t| %>
<% stars += '⭐️' %>
<% end %>
<li><%= review.content %> : <%= stars %> </li>
<% end %>
</ul>
<p><%= link_to "Edit restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary m-2" %></p>
<p><%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary m-2" %></p>
<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary m-2"  %>
